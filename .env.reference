# DISCOM Smart Meter GPS Tracking - Reference Environment Variables
# ===================================================================
# Copy this file to .env.production and update with actual values
# DO NOT commit .env.production to GitHub!

# ===========================================
# SUPABASE CONFIGURATION (Get from Supabase Dashboard)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ===========================================
# NEXTAUTH CONFIGURATION (Generate secure keys)
# ===========================================
NEXTAUTH_URL=https://gps.discom-north.gov.in
NEXTAUTH_SECRET=generate_32_character_secure_key_here_minimum

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://username:password@host:port/meter_gps_tracking

# ===========================================
# REDIS CONFIGURATION (For caching and sessions)
# ===========================================
REDIS_URL=redis://username:password@host:port
REDIS_PASSWORD=your_redis_password_here

# ===========================================
# MONITORING AND LOGGING
# ===========================================
LOG_LEVEL=info
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ===========================================
# DISCOM ORGANIZATION CONFIGURATION
# ===========================================
ORGANIZATION_NAME=DISCOM North
ORGANIZATION_DOMAIN=discom-north.gov.in
SUPPORT_EMAIL=support@discom-north.gov.in
SUPPORT_PHONE=1800-123-4567

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
CORS_ORIGIN=https://gps.discom-north.gov.in
JWT_SECRET=your_jwt_secret_key_minimum_32_characters

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ANALYTICS=true
ENABLE_ALERTS=true
ENABLE_EXPORT_FEATURES=true

# ===========================================
# DEVICE MANAGEMENT
# ===========================================
MAX_DEVICES_PER_ORGANIZATION=10000
DEVICE_TOKEN_EXPIRY_DAYS=30

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=3000

# ===========================================
# API RATE LIMITING
# ===========================================
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================
# Email service (SendGrid)
EMAIL_FROM=noreply@discom-north.gov.in
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key

# SMS service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=discom-gps-tracking-storage

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
